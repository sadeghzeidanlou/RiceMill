<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RiceMill.Ui.Pages.TabbedPages.DashboardPage"
             NavigationPage.HasNavigationBar="False"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui">

    <ContentPage.Behaviors>

        <mct:StatusBarBehavior 
            StatusBarColor="#3D9970" />

    </ContentPage.Behaviors>

    <VerticalStackLayout BackgroundColor="White">
        <Image Source="dordanehricemill.png"
               Scale="1.5" 
               Margin="0,100,0,0" />

        <Label Text="به دردانه خوش آمدید"
               FontSize="30"
               HorizontalOptions="Center"
               Margin="0,20,0,0"/>
        
        <Label Text="با دردانه به راحتی کارخانه شالیکوبی خود را مدیریت کنید"
               FontSize="20"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               Margin="0,20,0,0"/>
    </VerticalStackLayout>
    
</ContentPage>